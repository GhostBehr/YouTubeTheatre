{
  "name": "YouTube Theatre",
  "permissions": [
    "declarativeContent"
  ],
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Reload YouTube videos in full windowed mode",
  "homepage_url": "https://github.com/GhostBehr/YoutubeTheatre",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "YouTube Theatre"
  }
}